#include "rk3399-gru.dtsi"

/ {
	backlight: backlight {
		compatible = "pwm-backlight";
		pwms = <&cros_ec_pwm 0>;
		brightness-levels-scale = <0x10000>;
		default-brightness-level = <0x828f>; /* arbitrary, ~51% */
		enable-gpios = <&gpio1 17 GPIO_ACTIVE_HIGH>;
		power-supply = <&pp3300_disp>;
		pinctrl-names = "default";
		pinctrl-0 = <&bl_en>;
		pwm-delay-us = <10000>;
	};

	edp_panel: edp-panel {
		compatible = "boe,nv101wxmn51", "simple-panel";
		backlight = <&backlight>;
		power-supply = <&pp3300_disp>;

		ports {
			panel_in_edp: endpoint {
				remote-endpoint = <&edp_out_panel>;
			};
		};
	};
};

&ap_i2c_ts {
	touchscreen: touchscreen@10 {
		compatible = "elan,ekth3500";
		reg = <0x10>;

		pinctrl-names = "default";
		pinctrl-0 = <&touch_int_l &touch_reset_l>;

		interrupt-parent = <&gpio3>;
		interrupts = <13 IRQ_TYPE_EDGE_FALLING>;

		reset-gpios = <&gpio4 26 GPIO_ACTIVE_LOW>;
	};
};

&ap_i2c_tp {
	trackpad: trackpad@15 {
		compatible = "elan,ekth3000";
		reg = <0x15>;

		pinctrl-names = "default";
		pinctrl-0 = <&trackpad_int_l>;

		interrupt-parent = <&gpio1>;
		interrupts = <4 IRQ_TYPE_EDGE_FALLING>;

		wakeup-source;
	};
};

&dmc_opp_table {
	opp02 {
		opp-suspend;
	};

	/delete-node/ opp03;
};

/*
 * HACK: Disabling the ddr auto power down on bob board, since that's unstable
 * during enabling the dmc, that's still need to figure out the root cause.
 */
&dmc {
	rockchip,pd_idle_dis_freq = <200000000>;
	rockchip,sr_idle_dis_freq = <200000000>;
	rockchip,sr_mc_gate_idle_dis_freq = <200000000>;
	rockchip,standby_idle_dis_freq = <200000000>;
};

&edp {
	status = "okay";

	ports {
		edp_out: port@1 {
			reg = <1>;
			#address-cells = <1>;
			#size-cells = <0>;

			edp_out_panel: endpoint@0 {
				reg = <0>;
				remote-endpoint = <&panel_in_edp>;
			};
		};
	};
};

&spi0 {
	status = "okay";

	cr50@0 {
		compatible = "google,cr50";
		reg = <0>;
		spi-max-frequency = <800000>; // TODO: review later
	};
};

&pinctrl {
	wifi {
		wlan_host_wake_l: wlan-host-wake-l {
			rockchip,pins = <0 8 RK_FUNC_GPIO &pcfg_pull_up>;
		};
	};
};
